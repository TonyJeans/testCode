<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.syl.dao.ItemsDao">
	<select id="findItemsByQueryVo" parameterType="com.syl.pojo.QueryVo" resultType="com.syl.pojo.Items">
		select * from items
		<where>
			<if test="name != null">
				and name = #{name}
			</if>
			<if test="detail != null">
				and detail like "%"#{detail}"%"
			</if>
		</where>
	</select>
</mapper>